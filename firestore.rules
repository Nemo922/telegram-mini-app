rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Users collection
    match /users/{userId} {
      allow read: if true;
      allow write: if true;
    }
    
    // Accounts collection
    match /accounts/{accountId} {
      allow read: if true;
      allow write: if true;
    }
    
    // ID Verifications collection
    match /id_verifications/{verificationId} {
      allow read: if true;
      allow write: if true;
    }
    
    // Verifications collection (Telegram)
    match /verifications/{verificationId} {
      allow read: if true;
      allow write: if true;
    }
    
    // Notifications collection
    match /notifications/{notificationId} {
      allow read: if true;
      allow write: if true;
    }
  }
}
